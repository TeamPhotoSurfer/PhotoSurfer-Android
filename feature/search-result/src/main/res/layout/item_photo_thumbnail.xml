    <data>


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="118dp"
            android:layout_height="118dp"
            android:layout_marginEnd="4dp"

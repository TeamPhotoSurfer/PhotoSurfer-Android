<resources>
    <!-- Base application theme. -->
    <style name="Theme.PhotoSurferAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/point_main</item>
        <item name="colorPrimaryVariant">@color/point_sub</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BlueEditTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/main</item>
        <item name="colorControlNormal">@color/main</item>
        <item name="colorControlHighlight">@color/main</item>
        <item name="colorAccent">@color/main</item>
        <item name="android:textCursorDrawable">@drawable/shape_rect_main_blue_cursor</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.PhotoSurferAndroid</item>
    </style>

    <!-- text theme. -->

    <style name="title_1B">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">7.2sp</item>
    </style>

    <style name="title_1M">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">7.2sp</item>
    </style>

    <style name="title_2B">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="title_2M">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="title_3B">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">5.4sp</item>
    </style>

    <style name="title_3M">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">5.4sp</item>
    </style>

    <style name="subtitle_1">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">-200sp</item>
    </style>

    <style name="body_1">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">7.5sp</item>
    </style>

    <style name="subtitle_2">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">4.2sp</item>
    </style>

    <style name="body2">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4.2sp</item>
    </style>

    <style name="caption_1">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/transparent</item> <!-- 구분선 -->
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/noto_sans_cjkkr_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.022</item>
    </style>
</resources>
